web1:
  shared_writable_dirs:
    - /application/cache
    - /application/logs
  php_extensions:
    - curl
    - mcrypt
    - gd
    - pdo_mysql
  before_deploy:
    - "php index.php --task=migrations:run"
  cron:
    - "0 0 * * *": "php index.php --task=module:import"
    - "0 0 * * 0": "php index.php --task=module:discover"
    - "0 0 * * 1": "php index.php --task=module:sync"
    - "0 0 * * 2": "php index.php --task=queue:sync"

db1:
  type: mysql
