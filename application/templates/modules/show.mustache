{{#module}}
<h2>{{name}}</h2>
<p>{{description}}</p>

    <div class="links">
        {{#repository.homepage}}
            <a href="{{repository.homepage}}">Homepage</a>
        {{/repository.homepage}}
        {{#repository.has_wiki}}
            <a href="http://github.com/{{username}}/{{name}}/wiki">Wiki</a>
        {{/repository.has_wiki}}
        {{#repository.has_issues}}
            <a href="http://github.com/{{username}}/{{name}}/issues">Issues ({{repository.open_issues}})</a>
        {{/repository.has_issues}} 
    </div>

    <div class="authors">
        <h4>Authors</h4>
        <a href="http://github.com/{{username}}">{{username}}</a>
        
        {{repository.watchers}} watchers
        {{repository.forks}} forks
    </div>

    <div class="versions">
        <h4>Versions</h4>
        <ul>
        {{#tags}}
            <li><a href="{{url}}">{{name}}</a></li>
        {{/tags}}
        </ul>
    </div>

{{/module}}

